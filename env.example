# AxProtocol Environment Example
# Copy this file to `.env` and fill in the real values before running.

# ------------------------------
# OpenAI / AxProtocol Core
# ------------------------------
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXX
OP_AUTH_SECRET=replace-with-random-secret
OP_REFRESH_SECRET=replace-with-random-secret
API_KEY_SECRET=replace-with-random-secret
AUTH_DEV_MODE=false

# ------------------------------
# Model Tier Configuration
# ------------------------------
MODEL_DEV=gpt-4o-mini
MODEL_PREP=gpt-4o-turbo
MODEL_CLIENT=gpt-4o
TIER=CLIENT            # DEV | PREP | CLIENT

# ------------------------------
# Domain / Role Settings
# ------------------------------
DOMAIN=
DOMAIN_CONFIDENCE_THRESHOLD=0.6
DOMAIN_FALLBACK=marketing
BUILD_TYPE=stable
ROLE_FALLBACK_ENABLED=true

# ------------------------------
# Logging & Debug Options
# ------------------------------
DEBUG=false
SAVE_RAW_RESPONSES=false
DRY_RUN=false

# ------------------------------
# Deployment (Traefik / TLS / Images)
# ------------------------------
ACME_EMAIL=you@example.com
DOMAIN_ROOT=axprotocol.io
DOMAIN_APP=axprotocol.io
DOMAIN_SENTINEL=sentinel.axprotocol.io
ACME_FILE=./traefik/acme.json

ENABLE_SIGNUP=true
FREE_TIER_LIMIT=50

AXP_IMAGE=ghcr.io/your-org/axp:latest
SENTINEL_IMAGE=ghcr.io/your-org/sentinel:latest

# ------------------------------
# Backend / Waitlist API
# ------------------------------
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/axp
AXP_API_KEY=replace-with-axprotocol-api-key
SENDGRID_API_KEY=optional-sendgrid-key
JWT_SECRET=replace-with-random-secret

# ------------------------------
# Frontend (Next.js / Emergent export)
# ------------------------------
NEXT_PUBLIC_API_URL=https://your-project.vercel.app
NEXT_PUBLIC_AXP_BRAND=AxProtocol

# ------------------------------
# Miscellaneous
# ------------------------------
PLAUSIBLE_SITE_ID=axprotocol.io
POSTHOG_API_KEY=optional-posthog-key
